<!DOCTYPE html>
<html lang="zh">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>文章详情</title>
<link rel="stylesheet" href="styles.css">
</head>
<body>
<header>
  <a href="index.html" class="back-btn">返回首页</a>
</header>
<main id="article-container">加载中...</main>

<script>
const params = new URLSearchParams(location.search);
const id = params.get('id');

fetch('articles.json')
  .then(res => res.json())
  .then(data => {
    if (!data[id]) {
      document.getElementById('article-container').textContent = "文章不存在";
      return;
    }
    const article = data[id];
    document.title = article.source + " - 详情";
    document.getElementById('article-container').innerHTML = `
      <h2>${article.source}</h2>
      <div class="meta">${article.author} | ${article.time}</div>
      ${article.content}
    `;
  });
</script>
</body>
</html>
